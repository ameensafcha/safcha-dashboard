generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Module {
    id       String     @id @default(cuid())
    name     String
    slug     String     @unique
    type     ModuleType @default(PAGE)
    parentId String?
    icon     String?
    order    Int        @default(99)
    isActive Boolean    @default(true)

    parent   Module?  @relation("ModuleToModule", fields: [parentId], references: [id])
    children Module[] @relation("ModuleToModule")

    RolePermission RolePermission[]
    UserPermission UserPermission[]

    @@index([parentId])
}

model Role {
    id             String           @id
    name           String           @unique
    RolePermission RolePermission[]
    User           User[]
}

model RolePermission {
    id        String  @id
    roleId    String
    moduleId  String
    canCreate Boolean @default(false)
    canRead   Boolean @default(false)
    canUpdate Boolean @default(false)
    canDelete Boolean @default(false)
    Module    Module  @relation(fields: [moduleId], references: [id], onDelete: Cascade)
    Role      Role    @relation(fields: [roleId], references: [id], onDelete: Cascade)

    @@unique([roleId, moduleId])
    @@index([moduleId])
    @@index([roleId])
}

model User {
    id             String           @id
    name           String
    email          String           @unique
    password       String
    roleId         String
    isActive       Boolean          @default(true)
    createdAt      DateTime         @default(now())
    updatedAt      DateTime         @updatedAt
    Role           Role             @relation(fields: [roleId], references: [id])
    UserPermission UserPermission[]
    UserTheme      UserTheme?

    @@index([roleId])
}

model UserPermission {
    id        String  @id
    userId    String
    moduleId  String
    canCreate Boolean @default(false)
    canRead   Boolean @default(false)
    canUpdate Boolean @default(false)
    canDelete Boolean @default(false)
    Module    Module  @relation(fields: [moduleId], references: [id], onDelete: Cascade)
    User      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([userId, moduleId])
    @@index([moduleId])
    @@index([userId])
}

model UserTheme {
    id          String   @id @default(cuid())
    userId      String   @unique
    
    mode        String?  // "light", "dark", "system" (NULL = not set)
    
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    
    User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    @@index([userId])
}

enum ModuleType {
    FOLDER
    PAGE
    DASHBOARD
}

model Category {
    id          String    @id @default(cuid())
    name        String
    slug        String    @unique
    description String?
    isActive    Boolean   @default(true)
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    products    Product[]

    @@index([slug])
}

model Product {
    id              String    @id @default(cuid())
    name            String
    categoryId      String
    skuPrefix       String
    description     String?
    keyIngredients  String?
    caffeineFree    Boolean   @default(false)
    sfdaStatus      String    // "Approved", "Pending", "Not Submitted"
    sfdaReference   String?
    baseCost        Float
    baseRetailPrice Float
    imageUrl        String?
    status          String    // "Active", "In Development", "Discontinued"
    launchDate      DateTime?
    createdAt       DateTime  @default(now())
    updatedAt       DateTime  @updatedAt
    
    category        Category  @relation(fields: [categoryId], references: [id])

    @@index([categoryId])
    @@index([status])
    @@index([name])
}
